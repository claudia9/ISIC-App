<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ISIC_FMT_MMCP_App;assembly=ISIC_FMT_MMCP_App"
             x:Class="ISIC_FMT_MMCP_App.MonitorSettingsPage"
              BackgroundColor="#444444">

  <ContentPage.Resources>
    <ResourceDictionary>

      <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="#FF1A1A1A" />
      </Style>

      <Style TargetType="Button">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontAttributes" Value="Bold" />
      </Style>

      <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Calibry"/>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value=" 0, 30, 0, 0" />
      </Style>

    </ResourceDictionary>
  </ContentPage.Resources>

  <StackLayout Padding="20">

    <local:RoundedButton x:Name="Back" Image="home_icon.png"/>

    <Label x:Name="MonitorAddrs" Text="Monitor addresses" TextColor="White" />

    <Grid ColumnSpacing="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>
      <Label x:Name="Mon1" Text="Monitor 1" TextColor="White" Grid.Column="0" Grid.Row="0"/>
      <Picker x:Name="Mon1Addr" TextColor="White" Grid.Column="1" Grid.Row="0"/>
      <Label x:Name="Mon2" Text="Monitor 2" TextColor="White" Grid.Column="0" Grid.Row="1"/>
      <Picker x:Name="Mon2Addr" TextColor="White" Grid.Column="1" Grid.Row="1"/>
      <Label x:Name="Mon3" Text="Monitor 3" TextColor="White" Grid.Column="0" Grid.Row="2"/>
      <Picker x:Name="Mon3Addr" TextColor="White" Grid.Column="1" Grid.Row="2"/>

    </Grid>

    <Label x:Name="BaudLabel" Text="Baud" TextColor="White" />

    <Grid ColumnSpacing="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
      </Grid.RowDefinitions>
      <Label x:Name="BaudTitle" Text="Baud" TextColor="White" Grid.Column="0" Grid.Row="0"/>
      <Picker x:Name="Baud" TextColor="White" Grid.Column="1" Grid.Row="0" />

    </Grid>
  </StackLayout>
</ContentPage>