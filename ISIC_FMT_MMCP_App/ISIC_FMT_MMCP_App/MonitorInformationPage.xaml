<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISIC_FMT_MMCP_App.MonitorInformationPage">

  <StackLayout Padding="15">
    <ScrollView>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
      </Grid>
        <Label x:Name="NameLabel" Grid.Column="0" Grid.Row="0">Name:</Label>
        <Label x:Name="NameInfo" Binding="" Grid.Column="1" Grid.Row="0"></Label>
        <Label x:Name="RNLabel" Grid.Column="0" Grid.Row="1">R/N:</Label>
        <Label x:Name="RNLabel" Grid.Column="1" Grid.Row="1"></Label>
        <Label x:Name="TempLabel" Grid.Column="0" Grid.Row="2">Temp:</Label>
        <Label x:Name="TempInfo" Grid.Column="1" Grid.Row="2"></Label>
        <Label x:Name="TimeLabel" Grid.Column="0" Grid.Row="3"></Label>
        <Label x:Name="TimeInfo" Grid.Column="1" Grid.Row="3"></Label>
    </ScrollView>


  </StackLayout>
</ContentPage>